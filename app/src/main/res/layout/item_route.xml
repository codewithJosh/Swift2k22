<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="3dp"
    android:layout_marginTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        android:backgroundTint="?attr/colorOnPrimary">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- UP ITEM -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_box"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="?attr/colorPrimary"

                >

                <TextView
                    android:id="@+id/route_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="27dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/subtitle_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="NEXT TRIP STARTS AT"
                    android:layout_marginStart="12dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/route_name" />

                <TextView
                    android:id="@+id/bus_date_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="28sp"
                    android:layout_marginEnd="15dp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/bus_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bus_date_timestamp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorPlatinum"/>
            <!-- UNDER ITEM -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/hidden_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorOnPrimary"
                android:paddingBottom="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/bus_fare"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="11dp"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/on_book_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:paddingHorizontal="25dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/colorBlueJeans"
                    android:paddingVertical="10dp"
                    android:text="BOOK THIS SCHEDULE"
                    android:layout_marginTop="5dp"
                    android:textColor="?attr/colorOnPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/on_view_more_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="?attr/colorPrimary"
                    android:paddingVertical="10dp"
                    android:layout_marginHorizontal="5dp"
                    android:textAlignment="center"
                    android:text="VIEW MORE SCHEDULE"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintTop_toBottomOf="@id/on_book_schedule"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>